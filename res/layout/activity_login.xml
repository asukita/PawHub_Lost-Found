<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B71C4E"
    tools:context=".LoginActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/splash_logo" />

        <TextView
            android:id="@+id/login_app_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="open-sans"
            android:text="@string/app_title"
            android:textAlignment="center"
            android:textSize="37.4sp" />

        <TextView
            android:id="@+id/login_app_subtittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-7dp"
            android:fontFamily="open-sans"
            android:text="@string/app_subtitle"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextNombre"
            android:layout_width="225dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/corner_and_border_white_editext"
            android:ems="10"
            android:fontFamily="open-sans"
            android:inputType="text"
            android:paddingLeft="4dp" >
        </EditText>

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="225dp"
            android:layout_height="35dp"
            android:layout_marginTop="-2dp"
            android:background="@drawable/corner_and_border_white_editext"
            android:ems="10"
            android:fontFamily="open-sans"
            android:inputType="textPassword"
            android:paddingLeft="4dp" >
        </EditText>

        <ImageButton
            android:id="@+id/loginBtn"
            android:layout_width="227dp"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/title_activity_login"
            android:onClick="onBtnLogin_Click"
            android:src="@drawable/login_btn" />

        <ImageView
            android:id="@+id/login_or"
            android:layout_width="228dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/or_line" />

        <ImageButton
            android:id="@+id/loginFbBtn"
            android:layout_width="227dp"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:background="#B71C4E"
            android:contentDescription="@string/title_activity_login"
            android:src="@drawable/fbsign" />

        <ImageButton
            android:id="@+id/loginTwBtn"
            android:layout_width="227dp"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:background="#B71C4E"
            android:contentDescription="@string/title_activity_login"
            android:src="@drawable/twsign" />

        <LinearLayout
            android:layout_width="227dp"
            android:layout_height="match_parent"
            android:background="#B71C4E"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:fontFamily="open-sans"
                android:text="@string/app_registrer"
                android:textColor="#D36384"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="open-sans"
                android:text="@string/app_newpass"
                android:textColor="#D36384"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>